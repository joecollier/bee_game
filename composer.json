{
    "name": "BeeGame",
    "description": "Bee Game",
    "require": {
        "php": ">=5.5.0",
        "twig/twig": "^1.0"
    },
    "require-dev": {
        "phpunit/phpunit": "*",
        "phpspec/prophecy-phpunit": "~1.0",
        "phpspec/prophecy": "1.4.1",
        "crysalead/kahlan": "~1.1",
        "squizlabs/php_codesniffer": "^2.3",
        "twig/twig": "^1.0"
    },
    "autoload": {
        "psr-4": {
            "Game\\Models\\": "src/Models/",
            "Game\\Views\\": "src/Views/",
            "Game\\Controllers\\": "src/Controllers/",
            "Game\\Helpers\\": "src/Helpers/"
        }
    },
    "config": {
        "bin-dir": "bin/"
    },
    "scripts": {
        "post-install-cmd": [
            "./hooks/install-hooks"
        ],
        "post-update-cmd": [
            "./hooks/install-hooks"
        ]
    }
}
